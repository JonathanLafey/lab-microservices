{
  "name": "Microservice_C",
  "version": "0.0.1",
  "description": "Consumes heartbeats in order to apply penalty points to drivers that are not driving in a behaved manner. 1 Penalty point is added for every Km over 60Km/h, 2 points for over 80Km/h, 5 points for over 100Km/h.",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --inspect -r dotenv/config src/server.js",
    "eslint": "./node_modules/eslint/bin/eslint.js --debug ./src/",
    "start": "node -r dotenv/config src/server.js"
  },
  "author": "Dimitris Argyroudis",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "amqp-connection-manager": "^2.3.2",
    "amqplib": "^0.5.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.5.11",
    "winston": "^3.2.1"
  }
}
